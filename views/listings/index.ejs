<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let l of allListings){ %>
    <a href="/listings/<%=l._id  %>" class="listing-link">
        <div class="listing-card card col" id="allcards">
            <img id="allcardsimg" src="<%=l.image.url  %>" class="card-img-top" alt="listing_image"  style="height: 20rem;">
            <div class="card-body">
              <p class="card-text">
                <b><%=l.title  %> </b><br>
                &#8377; <%=l.price.toLocaleString("en-IN")  %> / night
              </p>
            </div>
        </div>  
    </a>
    
    <% } %> 
</div>
    
</body>
